body
    margin 0px
    background-color #f6f6f6

.mt16
    margin 16px 0 0 0

.box
    background-color #fff
    border 1px solid #d6d6d6
    border-radius 8px
    position absolute
    width 600px
    .btn-success
        background-color #E85722
        border 0px
        width 100%
    .form-cntrol
        &:focus
        &:active
            outline none
            box-shadow none
    .inside
        padding 16px
    .header
        padding 16px
        border-radius 8px 8px 8px 8px
        background-color: #fff
        a
            img
                display block
                background-repeat no-repeat
                width 20%
                margin 0px auto
                background-position center
    .footer
        text-align: center
        a
            display inline-block
            font-size: 0.8rem
            color: green
            &:last-child
                margin-left: 24px

.box_login
    left calc(50% - 300px)
    top calc(50% - 199px)

.box_register
    left calc(50% - 300px)
    top calc(50% - 325px)
