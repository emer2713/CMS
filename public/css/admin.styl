body
    background-color: #f5f6fa
    font-size: 14px
    font-family: 'Roboto', sans-serif;

h2,h3,h4,h5,ul,body,html
    padding: 0px
    margin: 0px
.col-md-4
    padding: 0px
.color_link
    color #151e45 !important
.wrapper
    min-height: 100vh
    overflow hidden
    .col1
        float left
        position relative
        z-index 999
        width 17%
    .col2
        float left
        width 83%

.sidebar
    background-color: #fff
    min-height: 100vh
    .section-top
        background-color: #FFF
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
    .logo
        display block
        background-repeat no-repeat
        width 40%
        margin 0px auto
        background-position center
    .user
        color #151e45 !important
        padding: 16px
        a
            color #151e45
            font-size 1.2rem
    .main
        display block
        margin-top: 12px
        ul
            li
                margin-bottom: 4px
                a
                    color: #8998AC
                    display block
                    font-size 1.1em
                    padding 12px 16px
                    i
                        margin-right: 10px
                    &:hover
                        background-color: #151e45
                        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
                        text-decoration: none
                        color: #fff
                a.active
                    background-color: #151e45
                    box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15)
                    text-decoration: none
                    color: #fff
.page
    padding-top: 16px
    padding-bottom: 16px
    .breadcrumb
        background-color: #151e45
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important
        .breadcrumb-item
            a
                color: #fff !important
                &:hover
                    text-decoration: none !important

.panel
    background-color: #FFF
    border-radius: 6px
    border-bottom: 2px solid #151e45
    width 100%
    .header
        border-bottom: 1px solid gray
        h2.title
            display: inline-block
            color: #192123d
            font-size: 1.1em
            padding: 12px 16px
    .inside
        padding: 16px
        .nav
            .nav-link
                color #fff
                background-color: #151e45
                border: 2px solid #fff
                border-radius: 8px
                margin-right: 8px
                &:hover
                    color #151e45
                    background-color: #fff
                    border: 2px solid #151e45
.opts
    a
        border-radius: 4px
        border: 1px solid #dedede
        display inline-block
        padding 8px 12px
.mt16
    margin-top: 16px
.cke
    width 100% !important

.product_gallery
    .btn-submit
        display block
        overflow hidden
        margin-right: 1px
        width 100%
        a
            border: 1px dashed #666666
            border-radius 4px
            color: #333
            display: block
            font-size: 1.3em
            text-align: center
            padding: 11px
            width 100%
            &:hover
                background-color #151e45
                color #fff
    .tumbs
        overflow hidden
        .tumb
            float left
            margin-top: 16px
            position relative
            width 48%
            a
                background-color: rgba(0, 0, 0, 0.5)
                display inline-block
                position absolute
                color: #ffffff
                padding: 6px 10px
                border-radius: 50%
                bottom: 8px
                right 8px
            img
                border-radius: 4px
                width 100%
            &:nth-child(odd)
                margin-right: 4px

.page_user
    .mini_profile
        .avatar
            border-radius: 50%
            width 150px
            display block
            margin: 0px auto
        .info
            background-color: #dfsd
            span
                display: block
                font-size: 1.2em
                width 100%
            span.title
                font-weight: bold
                margin-top: 16px
        .btn
            width: 100%
